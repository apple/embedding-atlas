{
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "strict": true,
    "maxNodeModuleJsDepth": 5
  },
  "include": ["examples/*.ts", "examples/*.js"]
}
